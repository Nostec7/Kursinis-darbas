        <!-- button element -->
        <button type="button" id="topButton"
                style="font-size:90%; width:21.35%; height: 4%;
                position: absolute; top:5%; left: 2%; resize:none" onclick="javascript:nullText()">Valyti istoriją</button>
                <script type="text/javascript">
                    function nullText() {
                        document.getElementById('enteredCode').value = "";



                    }
                </script>

    </div>

        <div style="position: absolute; right:50px; top:50px;" >

            <!-- UPLOAD IMAGES FOR CANVAS HERE -->
            <img id="turtle" width="0" height="0"
                 src="./images/turtle.png">

            <!-- CANVAS -->
            <canvas id="drawingCanvas" onresize="resize_canvas()"
                    style="border:1px solid white; background-color:white">

                <canvas id="imagingCanvas">
                <!-- canvas element for drawing (canvas rescale su js) -->
                <script type="text/javascript" src="./javascripts/resizeCanvas.js"></script>
                <script type="text/javascript" src="./javascripts/drawOnCanvas.js"></script>
                </canvas>
            </canvas>
        </div>
    </div>
</form>

